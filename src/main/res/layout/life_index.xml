<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="30px"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="30px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生活指数"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/life_pic1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_coldrisk"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/life_pic1"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <TextView
                    android:id="@+id/life_text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="感冒"/>
                <TextView
                    android:id="@+id/life_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="极易发"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:textColor="?android:attr/textColorPrimary"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/life_pic2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_coldrisk"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/life_pic2"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <TextView
                    android:id="@+id/life_text22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="感冒"/>
                <TextView
                    android:id="@+id/life_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="极易发"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:textColor="?android:attr/textColorPrimary"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


        <!--    第二排-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <!--        左边-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/life_pic3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_coldrisk"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/life_pic3"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:id="@+id/life_text33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="感冒"/>
                    <TextView
                        android:id="@+id/life_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="极易发"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        android:textColor="?android:attr/textColorPrimary"/>
                </LinearLayout>
            </RelativeLayout>

            <!--        右边-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/life_pic4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_coldrisk"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/life_pic4"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">
                    <TextView
                        android:id="@+id/life_text44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="感冒"/>
                    <TextView
                        android:id="@+id/life_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="极易发"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        android:textColor="?android:attr/textColorPrimary"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>